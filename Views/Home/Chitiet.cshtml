
@model Products

<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css"/>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css"/>
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  <link rel="stylesheet" href="~/css/slide.css" asp-append-version="true">
  <script src="~/js/chitiet.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> *@
   
</head>
<body>
<div class="top">
  <div class="left">
    <div class="chitiet-img">
                <img src="@Url.Action("GetImage", "Home", new { id = @Model.Id })" alt="Ảnh" />
    </div>

    <div class="noidung">
      <div class="Thông tin sản phẩm">
        <h1>Thông tin sản phẩm</h1>
        <p><strong>Tồn kho:</strong> @Model.QuantityInStock</p>
        <p><strong>Giới tính:</strong> @Model.ProductType</p>
      </div>

      <div class="mota">
        <h1>Mô tả</h1>
        <p>@Model.Description
        </p>
      </div>
     

    </div>
  </div>
  <div class="center">
    <div class="diachi">
        <h1>Tên giày: <p>@Model.ProductName</p></h1>
    </div>
    <div class="b">
        <div class="gia-tien">
            <h1>Giá tiền: <p>@Model.Price đ</p></h1>
        </div>
        <div class="Branđ">
            <h1>Hãng</h1>
            <p>@Model.Brand </p>
        </div>
    </div>
    <div class="right">
        <div class="mua">
            <div>
                        <form method="post" action="@Url.Action("AddToCart", "Home")">
                            <input type="hidden" name="ProductId" value="@Model.Id" />
                            <div class="soluong">
                                <label for="quantity">Số lượng</label>
                                <input type="number" id="quantity" name="Quantity" min="1" value="1">
                            </div>
                            <br>
                            <div class="size">
                                <label for="size">Size</label>
                                <select id="size" name="Size">
                                    <option value="35">35</option>
                                    <option value="36">36</option>
                                    <option value="37">37</option>
                                    <option value="38">38</option>
                                    <option value="39">39</option>
                                    <option value="40">40</option>
                                </select>
                            </div>
                            <br>
                            <button type="submit" class="btn" onclick="themVaoGioHang()">Thêm vào giỏ hàng</button>
                        </form>
            </div>
            <br>
            <!-- <form method="post" action="@Url.Action("Cart", "Home")">
                    <button type="submit" class="btn">Mua hàng</button>
                </form>-->
        </div>
    </div>
</div>
     
</div>
<script>
  $(document).ready(function(){
    var slider = $('.slider').slick();

    $('.prev').click(function() {
      slider.slick('slickPrev');
    });

    $('.next').click(function() {
      slider.slick('slickNext');
    });
  });
</script>

</body>
</html>
